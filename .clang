# .clangd в корне проекта
CompileFlags:
  # Явно указываем все include-пути из вашего Makefile
  Add: [
    # Абсолютные пути относительно корня проекта
    "-I.",
    "-I./Common",
    "-I./NameTable", 
    "-I./Parser",
    "-I./Support",
    "-I./Token",
    "-I./Vector",
    "-I./DumpCode",
    
    # Ваши основные флаги (упрощенная версия для clangd)
    "-std=c++17",
    "-D_DEBUG",
    "-ggdb3",
    
    # Системные пути
    "-I/usr/include",
    "-I/usr/local/include",
    
    # SDL2 если нужно
    "-I/usr/include/SDL2"
  ]
  
  # Убираем слишком строгие или проблемные флаги для clangd
  Remove: [
    "-Werror",  # clangd может выдавать предупреждения как ошибки
    "-fsanitize=*"  # санитайзеры мешают работе clangd
  ]

Diagnostics:
  ClangTidy: false  # временно отключаем для скорости

Index:
  Background: true
  Threads: 0
  
Hover:
  ShowAKA: Yes